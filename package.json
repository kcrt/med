{
  "name": "med",
  "version": "0.1.0",
  "description": "Medicalculator - Medical calculation library and Next.js web application. Provides comprehensive medical calculation functions for BMI, renal function, pediatric scores, and more. Can be used as a standalone library or as a web application.",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "dist",
    "src/formulas"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:lib": "tsc -p tsconfig.lib.json && tsc-alias -p tsconfig.lib.json",
    "prepublishOnly": "npm run build:lib",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "test": "vitest"
  },
  "keywords": [
    "medical",
    "calculator",
    "healthcare",
    "bmi",
    "clinical"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kcrt/med.git"
  },
  "dependencies": {
    "@mantine/core": "^8.3.13",
    "@mantine/form": "^8.3.13",
    "@mantine/hooks": "^8.3.13",
    "@tabler/icons-react": "^3.36.1",
    "expr-eval": "^2.0.2",
    "isomorphic-dompurify": "^2.35.0",
    "marked": "^17.0.1",
    "next": "16.1.4",
    "next-intl": "^4.7.0",
    "qrcode.react": "^4.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "1.0.0",
    "happy-dom": "^20.3.7",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
