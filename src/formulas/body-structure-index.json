{
  "bmi_adult": {
    "name": "BMI (Adult)",
	  "info": "BMI (Body Mass Index) is a simple measure that uses your height and weight to estimate body fat. It's calculated by dividing weight in kilograms by height in meters squared (kg/m²)",
    "input": {
      "height": {
        "label": "Height",
        "type": "float",
        "unit": "cm",
        "min": 30,
        "max": 300
      },
      "weight": {
        "label": "Weight",
        "type": "float",
        "unit": "kg",
        "min": 3,
        "max": 300
      }
    },
    "output": {
      "BMI": {
        "label": "BMI",
        "formula": "weight/(height/100)/(height/100)",
        "unit": "kg/m²",
        "precision": 1
      },
      "who": {
        "label": "WHO (World Health Organization)",
        "text": "<16.0: severe thinness, <17.0: moderate thinness, <18.5: mild thinness, [18.5–25.0): normal weight, ≥25: overweight (<30.0: preobese, <35.0: obese class I, <40.0: obese class II, ≥40.0: obese class III)"
      },
      "who_diag": {
        "label": "WHO (World Health Organization)",
        "formula": "iif(BMI < 16.0, 'severe thinness', BMI < 17.0, 'moderate thinness', BMI < 18.5, 'mild thinness', BMI < 25, 'normal', BMI < 30, 'preobese', BMI < 35, 'obesity class I', BMI < 40, 'obesity class II', 'obesity class III')"
      },
      "jasso_diag": {
        "label": "日本肥満学会による肥満度分類",
        "formula": "iif(BMI<18.5, '低体重', BMI<25, '普通体重', BMI<30, '肥満(1度)', BMI<35, '肥満(2度)', BMI<40, '肥満(3度)', '肥満(4度)')",
        "locales_in": ["ja"]
      }
    },
    "test": [
      {
        "input": {
          "height": 170,
          "weight": 70
        },
        "output": {
          "BMI": 24.2,
          "who_diag": "normal"
        }
      }
    ],
    "ref": {
      "Garabed Eknoyan (2008)": "doi:10.1093/ndt/gfm517",
      "WHO 2000": "pmid:11234459",
      "Nutrition Landscape Information System (WHO)": "https://apps.who.int/nutrition/landscape/help.aspx"
    }
  },
  "bmi_child": {
    "name": "BMI (Child)",
    "info": "Pediatric BMI assessment evaluates growth and nutritional status in children using age- and sex-specific percentiles. Different cutoffs and interpretations apply compared to adult BMI.",
    "input": {
      "height": {
        "label": "Height",
        "type": "float",
        "unit": "cm",
        "min": 10,
        "max": 300
      },
      "weight": {
        "label": "Weight",
        "type": "float",
        "unit": "kg",
        "min": 0,
        "max": 300
      }
    },
    "output": {
      "kaup": {
        "label": "Kaup Index",
        "formula": "weight/(height/100)/(height/100)",
        "unit": "kg/m²",
        "precision": 1
      },
      "info1": {
        "label": "Infants (3 months+)",
        "text": "Normal range: 15-18"
      },
      "kaup_diag": {
        "label": "Infants (3 months+)",
        "formula": "if(kaup>=15 and kaup<=18, 'Normal range', 'Outside normal range')"
      },
      "rohrer": {
        "label": "Rohrer Index",
        "formula": "weight/((height/100)*(height/100)*(height/100))*10",
        "unit": "",
        "precision": 1
      },
      "info2": {
        "label": "School-age children",
        "text": "Standard: 130, ≥160 indicates obesity"
      },
      "rohrer_diag": {
        "label": "School-age children",
        "formula": "iif(rohrer<130, 'Underweight', rohrer<160, 'Standard', 'Obese')"
      }
    },
    "test": [
      {
        "input": {
          "height": 80,
          "weight": 10
        },
        "output": {
          "kaup": 15.6,
          "kaup_diag": "Normal range",
          "rohrer": 195.3,
          "rohrer_diag": "Obese"
        }
      }
    ],
    "ref": {
      "Wikipedia": "http://ja.wikipedia.org/wiki/%E4%BD%93%E6%A0%BC%E6%8C%87%E6%95%B0"
    }
  },
  "target_height": {
    "name": "Target Height",
    "info": "Target height (also called mid-parental height) predicts a child's expected adult height based on parents' heights. Provides a reference point for evaluating growth patterns and potential growth disorders.",
    "input": {
      "father_height": {
        "label": "Father's Height",
        "type": "float",
        "unit": "cm",
        "min": 0,
        "max": 300
      },
      "mother_height": {
        "label": "Mother's Height",
        "type": "float",
        "unit": "cm",
        "min": 0,
        "max": 300
      },
      "sex": {
        "label": "Sex",
        "type": "sex"
      }
    },
    "output": {
      "target_height": {
        "label": "Target Height",
        "formula": "sex ? (father_height+mother_height+13)/2 : (father_height-13+mother_height)/2",
        "unit": "cm",
        "precision": 1
      },
      "target_range_min": {
        "label": "Target Range Min",
        "formula": "sex ? target_height - 9 : target_height - 8",
        "unit": "cm",
        "precision": 1
      },
      "target_range_max": {
        "label": "Target Range Max",
        "formula": "sex ? target_height + 9 : target_height + 8",
        "unit": "cm",
        "precision": 1
      }
    },
    "test": [
      {
        "input": {
          "father_height": 175,
          "mother_height": 160,
          "sex": 1
        },
        "output": {
          "target_height": 174
        }
      }
    ],
    "ref": {
      "Clinical pediatric endocrinology 16(4), 85-87, 2007-10": "https://www.jstage.jst.go.jp/article/cpe/16/4/16_4_85/_pdf"
    }
  },
  "bsa": {
    "name": "Body Surface Area",
    "info": "Body Surface Area (BSA) estimates the total surface area of the human body using height and weight. Essential for drug dosing calculations, cardiac index determination, and burn assessment.",
    "input": {
      "height": {
        "label": "Height",
        "type": "float",
        "unit": "cm",
        "min": 10,
        "max": 300
      },
      "weight": {
        "label": "Weight",
        "type": "float",
        "unit": "kg",
        "min": 0,
        "max": 300
      }
    },
    "output": {
      "bsa_dubois": {
        "label": "BSA (m²) Du Bois",
        "formula": "BSA_DuBois(height, weight)",
        "unit": "m²",
        "precision": 4
      },
      "bsa_takahira": {
        "label": "BSA (m²) Takahira",
        "formula": "0.007246 * weight ^ 0.425 * height ^ 0.725",
        "unit": "m²",
        "precision": 4
      },
      "bsa_mosteller": {
        "label": "BSA (m²) Mosteller",
        "formula": "sqrt(height * weight / 3600)",
        "unit": "m²",
        "precision": 4
      },
      "bsa_fujimoto_0": {
        "label": "BSA (m²) Fujimoto (0 years)",
        "formula": "95.68 * weight ^ 0.473 * height ^ 0.655 / 10000",
        "unit": "m²",
        "precision": 4
      },
      "bsa_fujimoto_1_5": {
        "label": "BSA (m²) Fujimoto (1-5 years)",
        "formula": "381.89 * weight ^ 0.423 * height ^ 0.362 / 10000",
        "unit": "m²",
        "precision": 4
      },
      "bsa_fujimoto_6": {
        "label": "BSA (m²) Fujimoto (6+ years)",
        "formula": "88.83 * weight ^ 0.444 * height ^ 0.663 / 10000",
        "unit": "m²",
        "precision": 4
      }
    },
    "test": [
      {
        "input": {
          "height": 170,
          "weight": 70
        },
        "output": {
          "bsa_mosteller": 1.8181
        }
      }
    ],
    "ref": {
      "Du Bois D, Du Bois EF: Nutrision 5: 303-311, 1989": "pubmed:2520314",
      "Mosteller RD: N Engl J Med 317: 1098, 1987": "pubmed:3657876",
      "藤本ら (1968), 日本衛生学雑誌 23(5):7-14": ""
    }
  }
}
