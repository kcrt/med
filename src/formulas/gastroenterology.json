{
  "ranson": {
    "name": "Ranson Criteria (Pancreatitis)",
    "info": "Ranson's criteria predict the severity of acute pancreatitis by observations assessed at admission and 48 hours. Higher scores correlate with increased morbidity and mortality.",
    "metadata": {
      "recommended": "Use Modified Ranson Criteria for gallstone pancreatitis"
    },
    "input": {
      "at_admission": {
        "label": "At Admission",
        "type": "heading"
      },
      "age_gt_55": {
        "label": "Age >55 years",
        "type": "onoff"
      },
      "wbc_gt_16": {
        "label": "WBC >16,000/μL",
        "type": "onoff"
      },
      "glucose_gt_200": {
        "label": "Glucose >200 mg/dL",
        "type": "onoff"
      },
      "ast_gt_250": {
        "label": "AST >250 IU/L",
        "type": "onoff"
      },
      "ldh_gt_350": {
        "label": "LDH >350 IU/L",
        "type": "onoff"
      },
      "at_48_hours": {
        "label": "At 48 hours",
        "type": "heading"
      },
      "calcium_lt_8": {
        "label": "Ca <8 mg/dL (<2.0 mmol/L)",
        "type": "onoff"
      },
      "hct_drop_10": {
        "label": "Hct drop >10%",
        "type": "onoff"
      },
      "pao2_lt_60": {
        "label": "PaO₂ <60 mmHg",
        "type": "onoff"
      },
      "bun_rise_5": {
        "label": "BUN increased by >5 mg/dL",
        "type": "onoff"
      },
      "base_deficit_gt_4": {
        "label": "Base deficit >4 mEq/L",
        "type": "onoff"
      },
      "fluid_seq_gt_6l": {
        "label": "Fluid sequestration >6L",
        "type": "onoff"
      }
    },
    "output": {
      "score": {
        "label": "Ranson Score",
        "formula": "age_gt_55 + wbc_gt_16 + glucose_gt_200 + ldh_gt_350 + ast_gt_250 + hct_drop_10 + bun_rise_5 + calcium_lt_8 + pao2_lt_60 + base_deficit_gt_4 + fluid_seq_gt_6l"
      },
      "mortality": {
        "label": "Mortality",
        "formula": "iif(score<=2, '0 to 3%', score<=4, '15%', score<=6, '40%', 'nearly 100%')"
      },
      "interpretation": {
        "label": "Interpretation",
        "text": "Score ≥3 indicates severe pancreatitis"
      }
    },
    "test": [
      {
        "input": {
          "age_gt_55": 1,
          "wbc_gt_16": 0,
          "glucose_gt_200": 1,
          "ldh_gt_350": 0,
          "ast_gt_250": 0,
          "hct_drop_10": 0,
          "bun_rise_5": 0,
          "calcium_lt_8": 0,
          "pao2_lt_60": 0,
          "base_deficit_gt_4": 0,
          "fluid_seq_gt_6l": 0
        },
        "output": {
          "score": 2,
          "mortality": "<1%"
        }
      }
    ],
    "ref": {
      "Ranson JH, et al. Surg Gynecol Obstet. 1974;139(1):69-81.": "pmid:4834279",
      "Hajira Basit: Ranson Criteria (StatPearls)": "https://www.ncbi.nlm.nih.gov/books/NBK482345/"
    }
  },
