          "bun_rise_2": 0,
          "calcium_lt_8": 0,
          "pao2_lt_60": 0,
          "base_deficit_gt_5": 0,
          "fluid_seq_gt_4l": 0
        },
        "output": {
          "score": 2,
          "mortality": "<1%"
        }
      }
    ],
    "ref": {
      "Ranson JH, et al. Surg Gynecol Obstet. 1974;139(1):69-81.": "pmid:4834279",
      "Hajira Basit: Ranson Criteria (StatPearls)": "https://www.ncbi.nlm.nih.gov/books/NBK482345/"
    }
  },
  "bisap": {
    "name": "BISAP Score (Pancreatitis)",
    "info": "The BISAP score predicts mortality of severe pancreatitis using five simple criteria.",
    "input": {
      "bun_gt_25": {
        "label": "BUN >25 mg/dL",
        "type": "onoff"
      },
      "impaired_mental": {
        "label": "Impaired mental status",
        "type": "onoff"
      },
      "impaired_mental_info": {
        "label": "= disorientation, lethargy, coma, or stupor",
        "type": "info"
      },
      "sirs": {
        "label": "SIRS",
        "type": "onoff"
      },
      "age_gt_60": {
        "label": "Age >60 years",
        "type": "onoff"
      },
      "pleural_effusion": {
        "label": "Pleural effusion",
        "type": "onoff"
      }
    },
    "output": {
      "score": {
        "label": "BISAP Score",
        "formula": "bun_gt_25 + impaired_mental + sirs + age_gt_60 + pleural_effusion"
      },
      "mortality_derivation": {
        "label": "In-hospital Mortality (Derivation cohort)",
        "formula": "iif(score==0, '0.2%', score==1, '0.7%', score==2, '2.1%', score==3, '8.3%', score==4, '19.3%', '26.7%')"
      },
      "mortality_validation": {
        "label": "In-hospital Mortality (Validation cohort)",
        "formula": "iif(score==0, '0.1%', score==1, '0.5%', score==2, '1.9%', score==3, '5.3%', score==4, '12.7%', '22.5%')"
      }
    },
    "test": [
      {
        "input": {
          "bun_gt_25": 0,
          "impaired_mental": 0,
          "sirs": 1,
          "age_gt_60": 0,
          "pleural_effusion": 0
        },
        "output": {
          "score": 1,
          "mortality": "<2%"
        }
      }
    ],
    "ref": {
      "B U Wu et al. (2008): The early prediction of mortality in acute pancreatitis: a large population-based study": "10.1136/gut.2008.152702"
    }
  },
  "glasgow_imrie": {
    "name": "Glasgow-Imrie Score (Pancreatitis)",
    "info": "The Glasgow-Imrie criteria assess the severity of acute pancreatitis within 48 hours of admission. Eight clinical and laboratory parameters predict complications and mortality, guiding management decisions.",
    "metadata": {
      "obsolete": "Use Ranson criteria or BISAP score instead"
    },
    "input": {
      "pao2_lt_60": {
        "label": "PaO₂ <60 mmHg",
        "type": "onoff"
      },
      "age_gt_55": {
        "label": "Age >55 years",
        "type": "onoff"
      },
      "wbc_gt_15": {
        "label": "WBC >15,000/μL",
        "type": "onoff"
      },
      "calcium_lt_8": {
        "label": "Calcium <8 mg/dL (<2.0 mmol/L)",
        "type": "onoff"
      },
      "bun_gt_45": {
        "label": "BUN >45 mg/dL (>16 mmol/L)",
        "type": "onoff"
      },
      "ldh_gt_600": {
        "label": "LDH >600 IU/L",
        "type": "onoff"
      },
      "albumin_lt_32": {
        "label": "Albumin <3.2 g/dL",
        "type": "onoff"
      },
      "glucose_gt_180": {
        "label": "Glucose >180 mg/dL (>10 mmol/L)",
        "type": "onoff"
      }
    },
    "output": {
      "score": {
        "label": "Glasgow-Imrie Score",
        "formula": "age_gt_55 + wbc_gt_15 + glucose_gt_180 + bun_gt_45 + pao2_lt_60 + albumin_lt_32 + calcium_lt_8 + ldh_gt_600"
      },
      "severity_info": {
        "label": "Severity Interpretation",
        "text": "Score ≥3: Severe pancreatitis"
      },
      "severity": {
        "label": "Severe",
        "formula": "iif(score==0, '3%', score==1, '8%', score==2, '7%', score==3, '14%', score==4, '53%', score==5, '63%', score>=6, '- (small number of subjects)')"
      }
    },
    "test": [
      {
        "input": {
          "age_gt_55": 0,
          "wbc_gt_15": 0,
          "glucose_gt_180": 0,
          "bun_gt_45": 0,
          "pao2_lt_60": 0,
          "albumin_lt_32": 0,
          "calcium_lt_8": 0
        },
        "output": {
          "score": 0,
          "severity": "Mild pancreatitis"
        }
      }
    ],
    "ref": {
      "S L Blamey, et al. Gut. 1984;25(12):1340-1346.": "10.1136/gut.25.12.1340"
    }
  }
}
