        "type": "onoff"
      },
      "glucose_gt_220": {
        "label": "Glucose >220 mg/dL",
        "type": "onoff"
      },
      "ast_gt_250": {
        "label": "AST >250 IU/L",
        "type": "onoff"
      },
      "ldh_gt_400": {
        "label": "LDH >400 IU/L",
        "type": "onoff"
      },
      "at_48_hours": {
        "label": "At 48 hours",
        "type": "heading"
      },
      "calcium_lt_8": {
        "label": "Ca <8 mg/dL (<2.0 mmol/L)",
        "type": "onoff"
      },
      "hct_drop_10": {
        "label": "Hct drop >10%",
        "type": "onoff"
      },
      "bun_rise_2": {
