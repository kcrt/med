          },
          {
            "value": 1,
            "label": "81-100"
          },
          {
            "value": 0,
            "label": "101-199"
          },
          {
            "value": 2,
            "label": "≥200"
          }
        ]
      },
      "heart_rate": {
        "label": "Heart Rate [bpm]",
        "type": "select",
        "options": [
          {
            "value": 2,
            "label": "≤40"
          },
          {
            "value": 1,
            "label": "41-50"
          },
          {
            "value": 0,
            "label": "51-100"
          },
          {
            "value": 1,
