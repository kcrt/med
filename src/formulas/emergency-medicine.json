          {
            "value": 1,
            "label": "9-11"
          },
          {
            "value": 0,
            "label": "12-20"
          },
          {
            "value": 2,
            "label": "21-24"
          },
          {
            "value": 3,
            "label": "≥25"
          }
        ]
      },
      "spo2_scale": {
        "label": "SpO₂ Scale",
        "type": "select",
        "options": [
          {
            "value": 1,
            "label": "Scale 1 (normal target SpO₂ 94-98%)"
