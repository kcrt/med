{
  "pews_brighton": {
    "name": "PEWS (Pediatric Early Warning Score) - Brighton",
    "input": {
      "behavior": {
        "label": "Behavior",
        "type": "select",
        "options": [
          { "value": 0, "label": "0 - Playing/appropriate" },
          { "value": 1, "label": "1 - Sleeping" },
          { "value": 2, "label": "2 - Irritable/agitated" },
          { "value": 3, "label": "3 - Lethargic/reduced response" }
        ]
      },
      "cardiovascular": {
        "label": "Cardiovascular",
        "type": "select",
        "options": [
          { "value": 0, "label": "0 - Pink, CRT 1-2s" },
          { "value": 1, "label": "1 - Pale, CRT 3s" },
          { "value": 2, "label": "2 - Grey, CRT 4s, HR +20" },
          { "value": 3, "label": "3 - Grey/mottled, CRT ≥5s, bradycardia" }
        ]
      },
      "respiratory": {
        "label": "Respiratory",
        "type": "select",
        "options": [
          { "value": 0, "label": "0 - Normal, no retractions" },
          { "value": 1, "label": "1 - RR +10 above normal, accessory muscles" },
          { "value": 2, "label": "2 - RR +20 above normal, retractions" },
          { "value": 3, "label": "3 - RR -5 below normal, grunting" }
        ]
      },
      "postop_vomiting": {
        "label": "Persistent Postoperative Vomiting",
        "type": "onoff"
      },
      "nebulizer_cpap": {
        "label": "Continuous Nebulizer/CPAP",
        "type": "onoff"
      }
    },
    "output": {
      "base_score": {
        "label": "Base Score",
        "formula": "behavior + cardiovascular + respiratory",
        "precision": 0
      },
      "additional_points": {
        "label": "Additional Points",
        "formula": "(postop_vomiting == 1 ? 2 : 0) + (nebulizer_cpap == 1 ? 2 : 0)",
        "precision": 0
      },
      "total_score": {
        "label": "Total PEWS Score",
        "formula": "base_score + additional_points",
        "precision": 0
      },
      "risk_level": {
        "label": "Risk Level",
        "formula": "iif(total_score >= 5, 'High Risk', total_score >= 3, 'Medium Risk', 'Low Risk')"
      },
      "action": {
        "label": "Recommended Action",
        "formula": "iif(total_score >= 5, 'MANDATORY RRT ACTIVATION', total_score >= 3, 'Notify physician, reassess within 2h', 'Routine monitoring q4h')"
      },
      "performance": {
        "label": "Performance Characteristics",
        "text": "Sensitivity 78-97% (cutoff 3), Specificity 74-95% (cutoff 5)"
      },
      "purpose": {
        "label": "Purpose",
        "text": "Early detection of clinical deterioration in hospitalized children, trigger Rapid Response Team (RRT)"
      }
    },
    "test": [
      {
        "input": {
          "behavior": 0,
          "cardiovascular": 0,
          "respiratory": 0,
          "postop_vomiting": 0,
          "nebulizer_cpap": 0
        },
        "output": {
          "base_score": 0,
          "additional_points": 0,
          "total_score": 0,
          "risk_level": "Low Risk",
          "action": "Routine monitoring q4h"
        }
      },
      {
        "input": {
          "behavior": 1,
          "cardiovascular": 1,
          "respiratory": 1,
          "postop_vomiting": 0,
          "nebulizer_cpap": 0
        },
        "output": {
          "base_score": 3,
          "additional_points": 0,
          "total_score": 3,
          "risk_level": "Medium Risk",
          "action": "Notify physician, reassess within 2h"
        }
      },
      {
        "input": {
          "behavior": 2,
          "cardiovascular": 2,
          "respiratory": 1,
          "postop_vomiting": 1,
          "nebulizer_cpap": 0
        },
        "output": {
          "base_score": 5,
          "additional_points": 2,
          "total_score": 7,
          "risk_level": "High Risk",
          "action": "MANDATORY RRT ACTIVATION"
        }
      }
    ],
    "ref": {
      "Monaghan A. Arch Dis Child. 2005;90(6):657": "pubmed:15908635",
      "Duncan H, Hutchison J, Parshuram CS. Pediatrics. 2006;118(3):e739-e746": "pubmed:16950965"
    }
  },
  "pgcs_infant": {
    "name": "Pediatric Glasgow Coma Scale (Infant)",
    "input": {
      "eye_opening": {
        "label": "Eye Opening (E)",
        "type": "select",
        "options": [
          { "value": 4, "label": "4 - Spontaneous" },
          { "value": 3, "label": "3 - To voice" },
          { "value": 2, "label": "2 - To pain" },
          { "value": 1, "label": "1 - None" }
        ]
      },
      "verbal_infant": {
        "label": "Verbal Response (V) - Infant",
        "type": "select",
        "options": [
          { "value": 5, "label": "5 - Cooing, babbling" },
          { "value": 4, "label": "4 - Irritable cry" },
          { "value": 3, "label": "3 - Cries to pain" },
          { "value": 2, "label": "2 - Moans to pain" },
          { "value": 1, "label": "1 - No response" }
        ]
      },
      "motor_infant": {
        "label": "Motor Response (M) - Infant",
        "type": "select",
        "options": [
          { "value": 6, "label": "6 - Spontaneous/purposeful movement" },
          { "value": 5, "label": "5 - Withdrawal to touch" },
          { "value": 4, "label": "4 - Withdrawal to pain" },
          { "value": 3, "label": "3 - Decorticate posturing" },
          { "value": 2, "label": "2 - Decerebrate posturing" },
          { "value": 1, "label": "1 - No response" }
        ]
      }
    },
    "output": {
      "total_score": {
        "label": "Total pGCS Score",
        "formula": "eye_opening + verbal_infant + motor_infant",
        "precision": 0
      },
      "interpretation": {
        "label": "Interpretation",
        "formula": "iif(total_score <= 8, 'Severe (≤8) - Consider intubation/ICP monitoring', total_score <= 12, 'Moderate (9-12)', 'Mild (13-15)')"
      },
      "age_group": {
        "label": "Age Group",
        "text": "Infant version"
      }
    },
    "test": [
      {
        "input": {
          "eye_opening": 4,
          "verbal_infant": 5,
          "motor_infant": 6
        },
        "output": {
          "total_score": 15,
          "interpretation": "Mild (13-15)"
        }
      },
      {
        "input": {
          "eye_opening": 2,
          "verbal_infant": 2,
          "motor_infant": 3
        },
        "output": {
          "total_score": 7,
          "interpretation": "Severe (≤8) - Consider intubation/ICP monitoring"
        }
      }
    ],
    "ref": {
      "Teasdale G, Jennett B. Lancet. 1974;2(7872):81-4": "pubmed:4136544",
      "Holmes JF, Palchak MJ, MacFarlane T, Kuppermann N. J Trauma. 2005;59(5):1093-7": "pubmed:16385285"
    }
  },
